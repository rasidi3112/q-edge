# ============================================================================
# Q-EDGE: Federated Hybrid Quantum-Neural Network Platform
# Environment Configuration Template
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# ============================================================================

# =========================
# Azure Quantum Configuration
# =========================
AZURE_QUANTUM_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_QUANTUM_RESOURCE_GROUP=your-resource-group
AZURE_QUANTUM_WORKSPACE_NAME=your-quantum-workspace
AZURE_QUANTUM_LOCATION=eastus

# Quantum Hardware Providers (IonQ/Rigetti)
QUANTUM_PROVIDER=ionq
QUANTUM_TARGET=ionq.simulator
QUANTUM_SHOTS=1024

# =========================
# Azure OpenAI Configuration
# =========================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =========================
# Azure Key Vault Configuration
# =========================
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
# Note: AZURE_CLIENT_SECRET should be managed via Azure Key Vault, not here

# =========================
# Post-Quantum Cryptography (PQC) Settings
# =========================
PQC_ALGORITHM=kyber1024
PQC_SIGNATURE_ALGORITHM=dilithium5
PQC_KEY_ENCAPSULATION_ENABLED=true

# =========================
# Federated Learning Configuration
# =========================
FL_MIN_CLIENTS=3
FL_ROUNDS=10
FL_LOCAL_EPOCHS=5
FL_BATCH_SIZE=32
FL_LEARNING_RATE=0.001
FL_AGGREGATION_STRATEGY=fedavg

# =========================
# Quantum Circuit Parameters
# =========================
VQC_NUM_QUBITS=8
VQC_NUM_LAYERS=4
VQC_ENTANGLEMENT_PATTERN=full
QKA_KERNEL_TYPE=fidelity
QEM_EXTRAPOLATION_FACTORS=[1.0, 1.5, 2.0, 2.5]

# =========================
# Backend Configuration
# =========================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=false
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =========================
# Celery/RabbitMQ Configuration
# =========================
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# =========================
# Redis Configuration
# =========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =========================
# PostgreSQL Configuration
# =========================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=qedge_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=qedge_db

# =========================
# Security Configuration
# =========================
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# =========================
# Monitoring & Observability
# =========================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
